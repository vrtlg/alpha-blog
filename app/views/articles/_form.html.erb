<% if @article.errors.any? %>
<div class="errors">
  <h2>The following errors prevented your article from being created:</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg%></li>
    <%end%>
  </ul>
  </div>
<%end%>

<div class="article_form">
  <%= form_for @article do |a|%>
  <div class="row">
   <%= a.label :title, class:"label"%>
   <%= a.text_field :title, class:"input_field" %>
  </div>

  <div class="row">
    <%= a.label :description, class:"label" %>
    <%= a.text_area :description, class:"input_field", height:300 %>
  </div>

   <p>
     <%= a.submit class: "btn btn-xlg"%>
   </p>
</div>

<% end %>
 <%= link_to "Back to all articles", articles_path%>
