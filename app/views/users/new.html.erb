<%= render 'layouts/errors', obj: @user %>

<div class="user-input_form">
  <%= form_for @user do |a|%>
  <div class="row">
   <%= a.label :username, class:"label"%>
    <div class="article_input">
      <%= a.text_field :username, class:"input_field", placeholder: "username" %>
    </div>
  </div>

  <div class="row">
   <%= a.label :email, class:"label"%>
    <div class="article_input">
      <%= a.email_field :email, class:"input_field", placeholder: "yourname@email.com" %>
    </div>
  </div>

  <div class="row">
    <%= a.label :password, class:"label" %>
    <div class="article_input input_tall">
      <%= a.password_field :password, class:"input_field", placeholder: "password"%>
    </div>
  </div>

   <p>
     <%= a.submit class: "btn btn-xlg"%>
   </p>
</div>

<% end %>
 <%= link_to "Back to all articles", articles_path%>
