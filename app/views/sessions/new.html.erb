<%# <%= render 'layouts/errors', obj: @session %>

<h1>Login</h1>

<div class="user-input_form">
  <%= form_for :session, url: login_path do |f|%>
  <div class="row">
   <%= f.label :email, class:"label"%>
    <div class="article_input">
      <%= f.email_field :email, class:"input_field" %>
    </div>
  </div>

  <div class="row">
    <%= f.label :password, class:"label" %>
    <div class="article_input">
      <%= f.password_field :password, class:"input_field"%>
    </div>
  </div>

   <p>
     <%= f.submit "Login", class: "btn btn-xlg"%>
   </p>
</div>

<% end %>
